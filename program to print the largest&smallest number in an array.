// program to print largest number in the array.

#include<stdio.h>
int main() {
    int arr[]={1,2,3,6,7,4};
    int sizea=sizeof(arr);
    int sizei=sizeof(int);
    int n=sizea/sizei;
    int largest=arr[0];
    for(int i=0; i<n; i++){
        if(arr[i]>largest){
            largest=arr[i];
        }
    }
    printf("largest value in the array is %d",largest);
    return 0;
}



// program to print smallest number in the array.

#include<stdio.h>
int main() {
    int arr[]={5,4,6,3,7,8,9};
    int sizea=sizeof(arr);
    int sizei=sizeof(int);
    int total=sizea/sizei;
    int smallest=arr[0];
    for(int i=0; i<total; i++){
        if(arr[i]<total){
            smallest=arr[i];
        }
    }
    printf("smallest number in the array is: %d",smallest);
    return 0;
}
