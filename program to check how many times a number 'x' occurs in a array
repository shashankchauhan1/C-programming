// program to check how many times a number 'x' occurs in a array.

#include<stdio.h>
int main() {
    int n,count=0;
    printf("enter a number: ");
    scanf("%d",&n);
    int arr[]={1,2,3,4,5,5,4,3,4,2,1,3,4,2,1};
    int sizea=sizeof(arr);
    int sizei=sizeof(int);
    int total=sizea/sizei;
    for(int i=0; i<total; i++){
        if(arr[i]==n){
            count++;
        }
    }
    printf("%d occurs %d times in this array.",n,count);
    return 0;
}
