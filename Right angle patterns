/// using while loop

// star pattern                                 *
                                                **
#include<stdio.h>                               ***
int main() {                                    ****
    int n;
    printf("enter a number: ");
    scanf("%d",&n);
    int i=0;
    while(i<n){
        int j=0;
        while(j<=i){
            printf("* ");
            j++;
        }
        printf("\n");
        i++;
    }
    return 0;
}


// pattern of number comes in i
                                                          0  
#include<stdio.h>                                         11
int main() {                                              222
    int n;                                                3333
    printf("enter a number: ");
    scanf("%d",&n);
    int i=0;
    while(i<n){
        int j=0;
        while(j<=i){
            printf("%d",i);
            j++;
        }
        printf("\n");
        i++;
    }
    return 0;
}


// pattern of number comes in j
                                                      0
#include<stdio.h>                                     01
int main() {                                          012
    int n;                                            0123
    printf("enter a number: ");
    scanf("%d",&n);
    int i=0;
    while(i<n){
        int j=0;
        while(j<=i){
            printf("%d",j);
            j++;
        }
        printf("\n");
        i++;
    }
    return 0;
}

/// using for loop
                                                        *
#include<stdio.h>                                       **
int main() {                                            ***
    int n=4;                                            ****
    for(int i=1; i<=n; i++){
        for(int j=1; j<=i; j++){
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
