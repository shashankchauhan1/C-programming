// 1> program to check how many even numbers are there in a array.

#include<stdio.h>

void check(int arr[],int n);

int main() {
    int arr[]={1,2,3,4,5,6,7,8,9};
    check(arr,9);
    return 0;
}

void check(int arr[],int n){
    int count=0;
    for(int i=0; i<n; i++){
        if(arr[i]%2==0){
            count++;
        }
    }
    printf("there are %d even numbers in the array.",count);
}



// 2> program to check how many odd numbers are there in a array.

#include<stdio.h>

void check(int arr[],int n);

int main() {
    int arr[]={1,2,3,4,5,6,7,8,9};
    check(arr,9);
    return 0;
}

void check(int arr[],int n){
    int count=0;
    for(int i=0; i<n; i++){
        if(arr[i]%2!=0){
            count++;
        }
    }
    printf("there are %d odd numbers in the array.",count);
}
