// program to check weather the input is a perfect number or not.

#include<stdio.h>
int main() {
    int n;
    int sum=0;
    printf("enter a number: ");
    scanf("%d",&n);
    for(int i=1; i<n; i++){
        if(n%i==0){
            sum=sum+i;
        }
    }
    if(sum==n){
        printf("it is a perfect number.");
    }
    else{
        printf("it is not a perfect number.");
    }
    return 0;
}
