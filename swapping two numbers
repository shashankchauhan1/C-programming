# swapping-two-numbers-in-C programming.

1> # using + (addition) , - (subtraction) operator.
// swap of two numbers in C without using third variable.

#include<stdio.h>
int main() {
    int a=4;
    int b=2;
    printf("before swapping a= %d and b= %d\n",a,b);
    a=a+b;
    b=a-b;
    a=a-b;
    printf("after swapping a= %d and b= %d\n",a,b);
}


2> #using * (multiply) , / (divide) operator.
// swap of two numbers in C without using third variable.

#include<stdio.h>
int main() {
    int a=4;
    int b=2;
    printf("before swapping a= %d and b= %d\n",a,b);
    a=a*b;
    b=a/b;
    a=a/b;
    printf("after swapping a= %d and b= %d\n",a,b);
}


3> // swap of two numbers in C using third variable.

#include<stdio.h>
int main() {
    int a=4;
    int b=2;
    int c;
    printf("before swapping a= %d and b= %d\n",a,b);
    c=a;
    a=b;
    b=c;
    printf("after swapping a= %d and b= %d\n",a,b);
}


4> // swap of two variable using XOR(bitwise) operator

#include<stdio.h>
int main() {
    int a=4;
    int b=2;
    int c;
    printf("before swapping a= %d and b= %d\n",a,b);
    c^a;
    a^b;
    b^c;
    printf("after swapping a= %d and b= %d\n",a,b);
}


5> // by call by reference in pointers in function call.

#include<stdio.h>

int swap(int *a, int *b);

int main() {
    int x=9,y=8;
    printf("x=%d y=%d\n",x,y);
    swap(&x,&y);
    printf("x=%d y=%d",x,y);
    return 0;
}

int swap(int *a, int *b){
    int temp=0;
    temp=*a;
    *a=*b;
    *b=temp;
    printf("a=%d b=%d\n",*a,*b);
}
