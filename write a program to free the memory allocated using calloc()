WAP to free the memory allocated using calloc().

#include<stdio.h>
#include<stdlib.h>

int main(){
    int *ptr;
    int n;
    printf("enter how mauch memory you want: ");
    scanf("%d",&n);
    
    ptr=(int*) calloc(n,sizeof(int));
    
    for(int i=0; i<n; i++){
        printf("%d",ptr[i]);
    }
    
    free(ptr);      // now the allocated memory is free
    
    return 0;
}  
