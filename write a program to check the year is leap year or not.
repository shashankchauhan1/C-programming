// write a program to check the year is leap year or not.

#include<stdio.h>

int leap_year(int n);

int main() {
    int n;
    printf("enter a number: ");
    scanf("%d",&n);
    leap_year(n);
    return 0;
}

int leap_year(int n){
    if(n%4==0){
        printf("%d is a leap year.",n);
    }
    else if(n%400==0){
        printf("%d is a leap year.",n);
    }
    else if(n%100==0){
        printf("%d is not a leap year",n);
    }
    else{
        printf("%d is not a leap year",n);
    }
    return 0;
}
