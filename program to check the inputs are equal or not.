// 1> using bitwise operators(not(!) , xor(^)).

#include<stdio.h>
int main() {
    int n1,n2;
    printf("enter number 1: ");
    scanf("%d",&n1);
    printf("enter number 2: ");
    scanf("%d",&n2);
    if(!(n1^n2)){
        printf("they are equal");
    }
    else{
        printf("they are not equal");
    }
}


// 2> using relational operator(==).

#include<stdio.h>
int main() {
    int n1,n2;
    printf("enter number 1: ");
    scanf("%d",&n1);
    printf("enter number 2: ");
    scanf("%d",&n2);
    if(n1==n2){
        printf("they are equal");
    }
    else{
        printf("they are not equal");
    }
}


// 3> using pointers.

#include<stdio.h>
int main() {
    int n1=4;
    int n2=4;
    
    int *ptr_n1=&n1;
    int *ptr_n2=&n2;
    
    if(*ptr_n1==*ptr_n2){
        printf("they are equal.");
    }
    else{
        printf("they are not equal.");
    }

    return 0;
}
