//  write a program to calculate the simple interest          (formula :   (p*r*t /100)).

#include<stdio.h>
int main() {
    float p;
    float r;
    float t;
    printf("enter principal amount: ");
    scanf("%f",&p);
    printf("enter annual interest rate: ");
    scanf("%f",&r);
    printf("enter time(year): ");
    scanf("%f",&t);
    printf("%f",(p*r*t)/100);
    return 0;
}
