// selection sort.

#include<stdio.h>

void selectionSort(int arr[],int n);

int main() {
    int arr[]={4,6,3,5,2,1};
    int n=sizeof(arr)/sizeof(int);
    printf("Before sorting: \n");
    for(int i=0; i<n; i++){
        printf("%d\t",arr[i]);
    }
    printf("\n");
    selectionSort(arr,n);
    return 0;
}

void selectionSort(int arr[],int n){
    int temp,minIndex;
    for(int i=0; i<n-1; i++){
        minIndex=i;
        for(int j=i+1; j<n; j++){
            if(arr[j]<arr[minIndex]){
                minIndex=j;
            }
        }
        temp=arr[i];
        arr[i]=arr[minIndex];
        arr[minIndex]=temp;
    }
    printf("After selection Sort\n");
    for(int i=0; i<n; i++){
        printf("%d\t",arr[i]);
    }
}
