// program to print reverse of a number:

1> using while loop

#include<stdio.h>
int main(){
    int n,rev,digit;
    printf("enter a number: ");
    scanf("%d",&n);
    while(n!=0){
        digit=n%10;
        rev=rev*10+digit;
        n=n/10;
    }
    printf("reversed number: %d",rev);
    return 0;
}
