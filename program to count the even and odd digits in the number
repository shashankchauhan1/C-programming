#include<stdio.h>
int main() {
    int n;
    int n1;
    int even=0,odd=0;
    printf("enter a number: ");
    scanf("%d",&n);
    while(n!=0){
        n1=n%10;
        if(n1%2==0){
            even++;
        }
        else{
            odd++;
        }
        n=n/10;
    }
    printf("there are %d even numbers and %d odd numbers",even,odd);
    return 0;
}
