// calculate the sum of n natural number.

#include<stdio.h>

int sum(int n);

int main() {
    int n;
    printf("enter a number: ");
    scanf("%d",&n);
    int result=sum(n);
    printf("%d",result);
    return 0;
}

int sum(int n){
    if(n==0){
        return 0;
    }
    else{
        int total=n+sum(n-1);
        return total;
    }
    return 0;
}
