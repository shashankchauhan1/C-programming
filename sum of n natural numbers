// sum of n natural number 

#include<stdio.h>

int sum(int n);

int main() {
    int n;
    printf("enter a number: ");
    scanf("%d",&n);
    int result=sum(n);
    printf("%d",result);
    return 0;
}

int sum(int n){
    if(n==1 || n==0){
        return 1;
    }
    else{
        int total=sum(n-1);
        int sumn=n+total;
        return sumn;
    }
    return 0;
}
